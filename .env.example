# Anthropic API key (required for detect, plan, patch)
ANTHROPIC_API_KEY=your_key_here

# GitHub token (required for Create PR - needs repo scope)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Optional: defaults (no hardcoded values in app)
# NEXT_PUBLIC_DEFAULT_REPO=C:\path\to\your\repo
# NEXT_PUBLIC_DEFAULT_INSTRUCTION=Your default instruction when box is empty
# NEXT_PUBLIC_QUICK_DEMO_INSTRUCTION=Instruction for Quick Demo button
